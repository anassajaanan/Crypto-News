<%- include('partials/header') -%>

<!-- masonry
================================================== -->
<section class="s-bricks">

    <div class="masonry">
        <div class="bricks-wrapper h-group">

            <div class="grid-sizer"></div>

            <div class="brick entry featured-grid animate-this">
                <div class="entry__content">

                    <div class="featured-post-slider">

                        <% for (let i = 0; i < 3; i++) { %>
                            <div class="featured-post-slide">
                                <div class="f-slide">

                                    <div class="f-slide__background"
                                         style="background-image:url('<%= posts[i].image1080 %>');"></div>
                                    <div class="f-slide__overlay"></div>

                                    <div class="f-slide__content">
                                        <ul class="f-slide__meta">
                                            <li><%= posts[i].date %></li>
                                        </ul>

                                        <h1 class="f-slide__title"><a href="/news/reuters/<%= posts[i].title.replace(/[&%?#]/g, function(match) { return encodeURIComponent(match); }).replace(/ /g, '-') %>&&<%= posts[i]._id %>" title=""><%= posts[i].title%></a></h1>
                                    </div>

                                </div> <!-- f-slide -->
                            </div> <!-- featured-post-slide -->
                        <% } %>





                    </div> <!-- end feature post slider -->

                    <div class="featured-post-nav">
                        <button class="featured-post-nav__prev">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                <path d="M12.707 17.293L8.414 13H18v-2H8.414l4.293-4.293-1.414-1.414L4.586 12l6.707 6.707z"></path>
                            </svg>
                        </button>
                        <button class="featured-post-nav__next">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                <path d="M11.293 17.293l1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"></path>
                            </svg>
                        </button>
                    </div> <!-- featured-post-nav -->

                </div> <!-- end entry content -->
            </div> <!-- end entry, featured grid -->

            <% if (posts.length !== 0) { %>
                <% for (let i = 1; i < stop; i++) {%>
                    <article class="brick entry format-standard animate-this">

                        <div class="entry__thumb">
                            <a href="/news/wsj/<%= posts[i].title.replace(/[&%?#]/g, function(match) { return encodeURIComponent(match); }).replace(/ /g, '-') %>&&<%= posts[i]._id %>" class="thumb-link">
                                <img src="<%= posts[i].image1080 %>"
                                     srcset="<%= posts[i].image1080 %> 1x, <%= posts[i].image1080 %> 2x" alt="">
                            </a>
                        </div> <!-- end entry__thumb -->

                        <div class="entry__text">
                            <div class="entry__header">

                                <div class="entry__meta">
                                            <span class="entry__cat-links">
                                                <span style="color: dodgerblue">Crypto</span>
                                            </span>
                                </div>

                                <div class="entry__meta">
                                            <span class="entry__cat-links">
                                                <span><%= posts[i].date %></span>
                                            </span>
                                </div>

                                <h1 class="entry__title"><a href="/news/reuters/<%= posts[i].title.replace(/[&%?#]/g, function(match) { return encodeURIComponent(match); }).replace(/ /g, '-') %>&&<%= posts[i]._id %>"><%= posts[i].title %></a></h1>

                            </div>
                        </div> <!-- end entry__text -->

                    </article> <!-- end entry -->

                <% } %>
            <% } %>

        </div> <!-- end masonry -->

        <div class="row">
            <div class="column large-12">
                <nav class="pgn">
                    <ul>
                        <li><a id="load-more-btn" class="pgn__num" href="/reuters/page=<%=Math.floor( stop / 10) + 1%>">Load more articles</a></li>
                    </ul>
                </nav> <!-- end pgn -->
            </div> <!-- end column -->
        </div> <!-- end row -->

</section> <!-- end s-bricks -->


<%- include('partials/footer') -%>